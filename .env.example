PORT=3000
NODE_ENV=development

# ===========================================
# DATABASE - OPCIÓN 1: Directa (desarrollo local)
# Requiere IPv6. Usar solo en local.
# ===========================================
# DB_HOST=db.xxx.supabase.co
# DB_PORT=5432
# DB_USER=postgres

# ===========================================
# DATABASE - OPCIÓN 2: Pooler (producción/cloud)
# Usar para Railway, Render, etc.
# ===========================================
DB_HOST=aws-0-us-west-2.pooler.supabase.com
DB_PORT=6543
DB_USER=postgres.xxx

DB_NAME=postgres
DB_PASSWORD=your_password_here
DB_SSL=true

# ===========================================
# JWT
# ===========================================
JWT_SECRET=your_super_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# EXTERNAL SERVICES
# ===========================================
N8N_WEBHOOK_URL=
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=

# ===========================================
# CLIENT
# ===========================================
CLIENT_URL=http://localhost:5173
